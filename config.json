{
    "arduino":
    {
        "enabled":true,
        "baud":38400,
        "start_delay":5,
        "update_ms":30,
        "values":{
            "brightness":{"command":"B", "min":3, "max":255, "default":0, "smooth":0},
            "saturation":{"command":"S", "min":0, "max":255, "default":0, "smooth":0},
            "hue":{"command":"H", "min":0, "max":255, "default":195, "smooth":0},
            "noise":{"command":"N", "min":0, "max":255, "default":0, "smooth":0}
        }
    },
    "bluetooth":
    {
        "enabled":true,
        "start_delay":2,
        "scan_dur":3,
        "remove_after":10
    },
    "audio":
    {
        "enabled":true,
        "analysis":true,
        "input_device":"Loopback: PCM (hw:1,1)",
        "default_device":"default",
        "sample_rate":48000,
        "dtype":"int16",
        "bit_size":-16,
        "buffer":1024,
        "latency":0.03
    },
    "clip_manager":
    {
        "fail_retry_delay":5,
        "base_path":"/home/pi/Signifier/audio_3",
        "valid_extensions":[".wav"],
        "strict_distribution":false,
        "volume":0.7,
        "fade_in":2000,
        "fade_out":3000,
        "max_playtime":60,
        "categories":
        {
            "oneshot":{"threshold":0, "is_loop":false, "loop_range":[4,8]},
            "short":{"threshold":5, "is_loop":false, "loop_range":[2,4]},
            "medium":{"threshold":10, "is_loop":false, "loop_range":[2,4]},
            "loop":{"threshold":30, "is_loop":false, "loop_range":[0,2]}
        }
    },
    "jobs":
    {
        "collection":
        {
            "enabled":true,
            "service":"audio",
            "timer":128,
            "parameters": {"pool_size":12, "start_clips":1}
        },
        "composition":
        {
            "enabled":true,
            "service":"audio",
            "timer":16,
            "parameters": {"quiet_level":3, "busy_level":8}
        },
        "volume":
        {
            "enabled":true,
            "service":"audio",
            "timer":1,
            "parameters": {"speed":10, "weight":0}
        }
    }
}